<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to(unfollow_user_path(@user), :remote => true, :class => 'btn btn-primary') do %>
    フォロー解除
    <% end %>
  <% else %>
    <%= link_to(follow_user_path(@user) ,:remote => true, :class => 'btn btn-primary') do %>
    フォローする
    <%end%>
  <% end %> 
<% end %>
<li>follower:<%= @user.followers_count %></li>
  <li>follow:<%= @user.follow_count %></li>